<Window x:Class="Shops.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shops"
        mc:Ignorable="d"
        Title="Info from DB" Height="450" Width="800">
    <DockPanel>
        <ComboBox x:Name="ComboBox" DockPanel.Dock="Top" Height="25" VerticalAlignment="Top" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,643,0">
            <TextBlock FontSize="14">Customers</TextBlock>
            <TextBlock FontSize="14">Sellers</TextBlock>
            <TextBlock FontSize="14">Orders</TextBlock>
        </ComboBox>
        <DataGrid x:Name="Table" IsEnabled="False" IsReadOnly="True"/>
    </DockPanel>
</Window>
